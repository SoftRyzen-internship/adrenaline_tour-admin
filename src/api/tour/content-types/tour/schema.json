{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "tour",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3,
      "maxLength": 50
    },
    "duration": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "default": "2 дні / 1 ніч",
      "maxLength": 15
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 3,
      "maxLength": 260
    },
    "activities": {
      "type": "relation",
      "required": true,
      "relation": "oneToMany",
      "target": "api::activity.activity",
      "mappedBy": "tour"
    },
    "countries": {
      "type": "relation",
      "required": true,
      "relation": "oneToMany",
      "target": "api::country.country",
      "mappedBy": "tour"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "plans": {
      "type": "component",
      "repeatable": false,
      "component": "tour.activity",
      "required": true
    },
    "services": {
      "type": "component",
      "repeatable": false,
      "component": "tour.services",
      "required": true
    },
    "rent": {
      "type": "component",
      "repeatable": false,
      "component": "tour.rent",
      "required": false
    },
    "details": {
      "type": "component",
      "repeatable": false,
      "component": "tour.details",
      "required": true
    },
    "recommended": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
