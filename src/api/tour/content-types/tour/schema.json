{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "tour",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "duration": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "default": "2 дні / 1 ніч"
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 3
    },
    "activities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity.activity",
      "mappedBy": "tour"
    },
    "countries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::country.country",
      "mappedBy": "tour"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    }
  }
}
